{
    "compilerOptions": {
        "isolatedModules": true,
        "outDir": "./dist/",
        "noImplicitAny": true,
        "module": "ESNext",
        "target": "es2018",
        "jsx": "react-jsx",
        "allowJs": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "baseUrl": ".",
        "strict": true,
        "paths": {
            "*": [
                "./src/*"
            ]
        },
    },
    "ts-node": {
        "compilerOptions": {
            "module": "CommonJS",
            "moduleResolution": "node",
            "resolveJsonModule": true,
            "allowSyntheticDefaultImports": true
        }
    },
    "exclude": [
        "./cypress.config.ts",
    ]
}